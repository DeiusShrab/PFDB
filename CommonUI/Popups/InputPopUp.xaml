        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonUI.Popups"
        mc:Ignorable="d"
        Title="InputPopUp" Height="150" Width="360">
  <Grid>
    <TextBox x:Name="TxtText" HorizontalAlignment="Left" Height="23" Margin="10,61,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="332"/>
    <Label x:Name="LblText" Content="TEST LABEL TEST LABEL TEST LABEL TEST LABEL TEST LABEL" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="332" Height="46"/>
    <Button x:Name="BtnOk" Content="OK" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="75" Click="BtnOk_Click"/>
    <Button x:Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="267,89,0,0" VerticalAlignment="Top" Width="75"/>

  </Grid>
</Window>
