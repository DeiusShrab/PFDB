<Window x:Class="CommonUI.ListPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonUI"
        mc:Ignorable="d"
        Title="ListPopUp" Height="480" Width="320">
  <Grid>
    <Label x:Name="LblMessage" Content="Select an option from the List (Use the box to search):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,0,0,0"/>
    <Button x:Name="BtnOkay" Content="OK" HorizontalAlignment="Left" Margin="227,419,0,0" VerticalAlignment="Top" Width="75" Click="BtnOkay_Click"/>
    <Button x:Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,419,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel_Click"/>
    <TextBox x:Name="TxtSearch" HorizontalAlignment="Left" Height="23" Margin="10,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" TextChanged="TxtSearch_TextChanged"/>
    <ListBox x:Name="LbxList" HorizontalAlignment="Left" Height="360" Margin="10,54,0,0" VerticalAlignment="Top" Width="292" MouseDoubleClick="LbxList_MouseDoubleClick"/>

  </Grid>
</Window>
