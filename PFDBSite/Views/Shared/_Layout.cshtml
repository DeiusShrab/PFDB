<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - PFDBSite</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="~/css/site.min.css" />

  <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
</head>
<body onload="closeNav()">
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="row-fluid">

        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Pathfinder" asp-action="Index">Home</a></li>
          <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Pathfinder" asp-action="Maps">Maps</a></li>
          @if (User.IsInRole("DM"))
          {
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="DM" asp-action="Index">DM Menu</a></li>
          }

          @if (User.IsInRole("Admin"))
          {
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Admin</a></li>
          }
          @if (User.IsInRole("Player"))
          {

            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index">Manage Profile</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Pathfinder" asp-action="LiveDisplay">Live Map [WIP]</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
          }
          else
          {
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Player Login</a></li>
          }
        </ul>
      </div>
    </nav>
    <div class="row">
      <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
          <p>&copy; 2018 - PFDBSite</p>
        </footer>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>
