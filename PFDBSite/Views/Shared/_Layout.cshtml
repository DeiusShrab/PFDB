<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - PFDBSite</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="~/css/site.min.css" />
</head>
<body onload="closeNav()">
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="row-fluid">

        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Pathfinder" asp-action="Index">Home</a></li>
          <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Pathfinder" asp-action="Maps">Maps</a></li>
          @if (User.IsInRole("DM"))
  {
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="DM" asp-action="Index">DM Menu</a></li>
}

          @if (User.IsInRole("Admin"))
  {
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Admin</a></li>
}
          @if (User.IsInRole("Player"))
  {

        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index">Manage Profile</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Pathfinder" asp-action="LiveDisplay">Live Map [WIP]</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
}
else
{
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Player Login</a></li>
}
        </ul>
      </div>
    </nav>
    <div class="row">
      <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
          <p>&copy; 2018 - PFDBSite</p>
        </footer>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>
