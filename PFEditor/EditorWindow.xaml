<Window x:Class="PFEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PFEditor"
        mc:Ignorable="d"
        Title="PFEditor" Height="900" Width="1600">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="833" Margin="10,26,0,0" VerticalAlignment="Top" Width="1572">
            <TabItem Header="Bestiary" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5">
                    <TabControl HorizontalAlignment="Left" Height="785" Margin="10,10,0,0" VerticalAlignment="Top" Width="1546">
                        <TabItem Header="General" Margin="-2,-2,-2,0">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem Header="Skills/Feats" Margin="-2,-2,-2,0">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem Header="Magic" Margin="-2,-2,-2,0">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                        <TabItem Header="Details" Margin="-2,-2,-2,0">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="MonsterSpawn" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="LbxMSBestiary" HorizontalAlignment="Left" Height="785" Margin="10,10,0,0" VerticalAlignment="Top" Width="193"/>
                    <DataGrid HorizontalAlignment="Left" Height="464" Margin="208,331,0,0" VerticalAlignment="Top" Width="1348"/>
                </Grid>
            </TabItem>
            <TabItem Header="Continent" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Terrain" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Weather" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Environment" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Location" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Menu HorizontalAlignment="Left" Height="20" Margin="0,1,0,0" VerticalAlignment="Top" Width="1592">
            <MenuItem x:Name="FileMenuItem" Header="File" Height="20" Width="35">
                <MenuItem Header="Save" HorizontalAlignment="Left" Height="20" Width="140" InputGestureText="Ctrl+S"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
